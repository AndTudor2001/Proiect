@page
@model Proiect.Pages.Tari.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adaugă</h1>

<h4>Tara</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tara.Nume" class="control-label"></label>
                <input asp-for="Tara.Nume" class="form-control" />
                <span asp-validation-for="Tara.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tara.Continent" class="control-label"></label>
                <input asp-for="Tara.Continent" class="form-control" />
                <span asp-validation-for="Tara.Continent" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <button class="btn btn-dark"><a style="text-decoration:none;color:white" asp-page="./Index">Înapoi</a></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
