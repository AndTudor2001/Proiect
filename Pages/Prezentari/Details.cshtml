@page
@model Proiect.Pages.Prezentari.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalii</h1>

<div>
    <h4>Prezentare</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.LabelFor(model => model.Prezentare.Tara.Nume,"Tara")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezentare.Tara.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelFor(model => model.Prezentare.Oras.Nume,"Oras")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezentare.Oras.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelFor(model => model.Prezentare.Oras.Descriere,"Descriere Oras")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezentare.Oras.Descriere)
        </dd>
        <dt class="col-sm-2">
            @Html.LabelFor(model => model.Prezentare.Hotel.Nume,"Hotel")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezentare.Hotel.Nume)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-secondary"><a style="text-decoration:none; color:White" asp-page="/Rezervari/Create">Rezerva!</a></button>
    <button class="btn btn-warning"> <a style="color: white; text-decoration: none" asp-page="./Edit" asp-route-id="@Model.Prezentare?.Id">Editează</a> </button>
     <button class="btn btn-dark"><a style="text-decoration:none;color:white" asp-page="./Index">Înapoi</a></button>
</div>
