<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Prenume)
            </th>
            <th>
                @Html.LabelFor(model => model.Rezervare[0].Hotel.Nume,"Hotel")
