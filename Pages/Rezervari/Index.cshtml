                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tara.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oras.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.TipCamera)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persoane)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataSosire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPlecare)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
