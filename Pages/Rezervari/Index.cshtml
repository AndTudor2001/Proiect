                @Html.DisplayNameFor(model => model.Rezervare[0].Hotel.TipCamera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Persoane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].DataSosire)
